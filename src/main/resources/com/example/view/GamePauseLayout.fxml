<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #666;" stylesheets="@../../../style/Main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.GamePauseController">
    <children>
      <Pane layoutX="13.0" layoutY="13.0" prefHeight="475.0" prefWidth="775.0" styleClass="pause-panel" stylesheets="@../../../style/Main.css">
         <children>
            <Label layoutX="102.0" layoutY="53.0" styleClass="pause-label" stylesheets="@../../../style/Main.css" text="GAME PAUSED" />
              <Button fx:id="resumeBtn" layoutX="298.0" layoutY="145.0" mnemonicParsing="false" onAction="#handleResumeAction" styleClass="pause-window-btn" stylesheets="@../../../style/Main.css" text="Resume" />
              <Button fx:id="restartBtn" layoutX="298.0" layoutY="235.0" mnemonicParsing="false" onAction="#handleRestartAction" styleClass="pause-window-btn" stylesheets="@../../../style/Main.css" text="Restart" />
              <Button fx:id="exitBtn" layoutX="298.0" layoutY="325.0" mnemonicParsing="false" onAction="#handleExitAction" styleClass="pause-window-btn" stylesheets="@../../../style/Main.css" text="Exit" />
            <Circle layoutX="664.0" layoutY="395.0" radius="29.0" stroke="BLACK" strokeType="INSIDE" />
              <Button fx:id="muteBtn" layoutX="637.0" layoutY="385.0" minHeight="21.0" minWidth="53.0" mnemonicParsing="false" onAction="#handleUnmuteAction" prefHeight="21.0" prefWidth="53.0" styleClass="mute-btn" stylesheets="@../../../style/Main.css">
               <graphic>
                  <ImageView fx:id="muteIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/icons/mute.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
              <Button fx:id="unmuteBtn" layoutX="637.0" layoutY="385.0" minHeight="21.0" minWidth="53.0" mnemonicParsing="false" onAction="#handleMuteAction" prefHeight="21.0" prefWidth="53.0" styleClass="mute-btn" stylesheets="@../../../style/Main.css" visible="false">
               <graphic>
                  <ImageView fx:id="unmuteIcon" fitHeight="31.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/icons/unmute.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
    </children>
</AnchorPane>
